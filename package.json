{
  "name": "oracle-engine-graphql",
  "version": "1.0.0",
  "description": "GraphQL API for handling requests for the Oracle-Engine AI RPG Assistant.",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "bun run codegen",
    "codegen": "graphql-codegen --config codegen.ts",
    "test": "bun test --test-name-pattern Unit",
    "test:e2e": "bun test --test-name-pattern E2E",
    "dev": "bun --watch ./src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --minify",
    "start": "bun run ./dist/index.js",
    "format": "prettier --write .",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:test": "docker-compose up --build -d",
    "docker:test:stop": "docker-compose down"
  },
  "keywords": [
    "AI",
    "LLM",
    "RPG",
    "Discord",
    "OpenAI",
    "Anthropic",
    "Google",
    "MongoDB",
    "Prisma"
  ],
  "author": "AconyteDS",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@graphql-tools/graphql-file-loader": "^8.0.19",
    "@graphql-tools/load": "^8.1.0",
    "@langchain/core": "^0.3.47",
    "@langchain/openai": "^0.3.17",
    "@prisma/client": "^6.6.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "firebase-admin": "^12.7.0",
    "graphql": "^16.10.0",
    "graphql-middleware": "^6.1.35",
    "graphql-modules": "^2.4.0",
    "graphql-scalars": "^1.24.2",
    "graphql-shield": "^7.6.5",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.16.2",
    "openai": "^4.96.0",
    "tiktoken": "^1.0.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/graphql-modules-preset": "^4.0.16",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@types/bun": "^1.2.10",
    "@types/cors": "^2.8.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "supertest": "^7.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md}": "prettier --write"
  }
}
