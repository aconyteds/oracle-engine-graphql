{
  "name": "oracle-engine-graphql",
  "version": "1.0.0",
  "description": "GraphQL API for handling requests for the Oracle-Engine AI RPG Assistant.",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "bun run codegen",
    "codegen": "graphql-codegen --config codegen.ts",
    "test": "bun test --test-name-pattern Unit",
    "test:e2e": "bun test --test-name-pattern E2E",
    "dev": "bun --watch ./src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --minify",
    "start": "bun run ./dist/index.js",
    "format": "prettier --write .",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "AI",
    "LLM",
    "RPG",
    "Discord",
    "OpenAI",
    "Anthropic",
    "Google",
    "MongoDB",
    "Prisma"
  ],
  "author": "AconyteDS",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@chakra-ui/react": "^3.0.1",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@graphql-tools/graphql-file-loader": "^8.0.2",
    "@graphql-tools/load": "^8.0.3",
    "@langchain/core": "^0.3.13",
    "@langchain/openai": "^0.3.11",
    "@prisma/client": "^5.21.1",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "firebase-admin": "^12.6.0",
    "framer-motion": "^11.11.10",
    "graphql": "^16.9.0",
    "graphql-middleware": "^6.1.35",
    "graphql-modules": "^2.3.0",
    "graphql-scalars": "^1.23.0",
    "graphql-shield": "^7.6.5",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.16.0",
    "openai": "^4.68.1",
    "tiktoken": "^1.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/graphql-modules-preset": "^4.0.10",
    "@graphql-codegen/typescript": "^4.1.0",
    "@graphql-codegen/typescript-resolvers": "^4.3.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@types/bun": "^1.1.11",
    "@types/cors": "^2.8.17",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9.13.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "supertest": "^7.0.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md}": "prettier --write"
  }
}
