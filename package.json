{
  "name": "oracle-engine-graphql",
  "version": "1.0.0",
  "description": "GraphQL API for handling requests for the Oracle-Engine AI RPG Assistant.",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "bun run codegen",
    "codegen": "graphql-codegen --config codegen.ts",
    "test": "NODE_ENV=test bun test src/",
    "test:isolated": "NODE_ENV=test bash scripts/run-isolated-tests.sh Unit",
    "test:e2e": "NODE_ENV=test bun test --timeout 30000 e2e/",
    "test:e2e:isolated": "NODE_ENV=test bash scripts/run-isolated-tests.sh E2E",
    "test:integration": "NODE_ENV=test bun test --timeout 30000 e2e/tests/",
    "test:integration:isolated": "NODE_ENV=test bash scripts/run-isolated-tests.sh E2E",
    "dev": "bun --watch ./src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --minify",
    "start": "bun run ./dist/index.js",
    "format": "biome format --write .",
    "prepare": "husky",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "docker:test": "docker-compose up --build -d",
    "docker:test:stop": "docker-compose down"
  },
  "keywords": [
    "AI",
    "LLM",
    "RPG",
    "Discord",
    "OpenAI",
    "Anthropic",
    "Google",
    "MongoDB",
    "Prisma"
  ],
  "author": "AconyteDS",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@graphql-tools/graphql-file-loader": "^8.1.2",
    "@graphql-tools/load": "^8.1.2",
    "@langchain/community": "^0.3.57",
    "@langchain/core": "^0.3.78",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/openai": "^0.6.16",
    "@prisma/client": "^6.18.0",
    "@sentry/bun": "^10.21.0",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "express": "^4.21.2",
    "firebase-admin": "^12.7.0",
    "graphql": "^16.11.0",
    "graphql-middleware": "^6.1.35",
    "graphql-modules": "^2.4.0",
    "graphql-scalars": "^1.25.0",
    "graphql-shield": "^7.6.5",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.16.2",
    "openai": "^4.104.0",
    "tiktoken": "^1.0.22",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/graphql-modules-preset": "^4.0.17",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.2",
    "@graphql-tools/load-files": "^7.0.1",
    "@testcontainers/mongodb": "^11.7.2",
    "@types/bun": "^1.3.1",
    "@types/cors": "^2.8.19",
    "@types/supertest": "^6.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "testcontainers": "^11.7.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md}": "biome check --write --no-errors-on-unmatched"
  }
}
