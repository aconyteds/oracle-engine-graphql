extend type Query {
  # returns all threads for the current user
  threads: [Thread!]
  # returns a single thread
  getThread(input: GetThreadInput!): GetThreadPayload
}

input GetThreadInput {
  threadId: ID!
}

type GetThreadPayload {
  thread: Thread
}

type Thread {
  id: ID!
  title: String!
  lastUsed: DateTime!
  messages: [Message!]
}

extend type User {
  threads: [Thread!]
}
