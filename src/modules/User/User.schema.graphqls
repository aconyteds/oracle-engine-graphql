extend type Query {
  currentUser: User
}

extend type Mutation {
  login(input: LoginInput!): LoginPayload
}

input LoginInput {
  email: String!
  password: String!
}

type LoginPayload {
  user: User
  token: String
}

type User {
  id: ID!
  email: String
  name: String
  isActive: Boolean!
  subscriptionTier: String!
  dailyUsage: UserDailyUsage
}

type UserDailyUsage {
  current: Int!
  limit: Int
  percentUsed: Float!
}
